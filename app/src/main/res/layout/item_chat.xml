<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/style_chat_other"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="其他人" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/colorSecondary"/>

        <EditText
            android:id="@+id/message_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:minWidth="120dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="end"
            android:background="@color/colorSecondary"/>

        <TextView
            android:id="@+id/time_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="end"
            android:background="@null"
            android:minWidth="120dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/style_chat_self"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="end"
            android:textColor="@color/white"
            android:text="其他人" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/colorSecondary"/>

        <EditText
            android:id="@+id/message_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@null"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:minWidth="120dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_gravity="start"
            android:background="@color/colorSecondary"/>

        <TextView
            android:id="@+id/time_self"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@null"
            android:minWidth="120dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>